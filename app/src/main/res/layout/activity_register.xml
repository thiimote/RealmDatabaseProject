<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="sign up"
    android:textSize="30sp"
    android:textStyle="bold"
    android:layout_marginTop="20dp"
    android:layout_gravity="center_horizontal"
    />
            <EditText
                android:background="@drawable/edittextstyle"
                android:id="@+id/text_email"
                android:hint="Email"
                android:layout_marginTop="30dp"
                android:layout_marginStart="5dp"
                android:layout_width="300dp"
                android:inputType="textEmailAddress"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"/>
            <EditText
                android:background="@drawable/edittextstyle"
                android:id="@+id/text_password"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_marginTop="14dp"
                android:layout_marginStart="4dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"/>
            <Button
                android:id="@+id/btn_register"
                android:text="sign up"
                android:background="@drawable/buttonstyle"
                android:layout_marginTop="16dp"
                android:paddingStart="42dp"
                android:paddingEnd="50dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="16sp"
                    android:layout_marginStart="3dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:text="Sign up with Social Platforms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:background="@drawable/socialstyle"
                        android:layout_marginRight="15dp"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:padding="13dp"
                        android:src="@drawable/facebook"/>
                    <ImageView
                        android:background="@drawable/socialstyle"
                        android:padding="13dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/twitter"/>

                    <ImageView
                        android:layout_marginRight="15dp"
                        android:background="@drawable/socialstyle"
                        android:padding="13dp"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/linkedin"/>

                    <ImageView
                        android:layout_marginRight="15dp"
                        android:background="@drawable/socialstyle"
                        android:padding="13dp"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/microsoft"/>

                </LinearLayout>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_marginStart="2dp"
                    android:textStyle="bold"
                    android:text="Email : thimoteharerimana@gmail.com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/alredyhaveaccount"
                    android:layout_gravity="end"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="30dp"
                    android:textColor="#EC072D"
                    android:textSize="14sp"
                    android:layout_marginStart="2dp"
                    android:textStyle="bold"
                    android:text="Already have An Acount?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>